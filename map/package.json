{
  "name": "@teikei/map",
  "description": "Teikei map SPA component. Teikei is the software that powers ernte-teilen.org, a website that maps out Community-supported Agriculture in Germany.",
  "version": "1.0.0",
  "homepage": "",
  "main": "src",
  "keywords": [
    "csa",
    "farming",
    "agriculture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/teikei/teikei"
  },
  "author": "Simon Jockers, Daniel Mack, Tobias PreuÃŸ, Christian Rijke",
  "license": "AGPL-3.0",
  "contributors": [],
  "bugs": {
    "url": "https://github.com/teikei/teikei/issues"
  },
  "engines": {
    "node": "18.x"
  },
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "dependencies": {
    "@craco/craco": "7.0.0",
    "@feathersjs/authentication-client": "4.5.15",
    "@feathersjs/feathers": "4.5.15",
    "@feathersjs/rest-client": "4.5.15",
    "classnames": "2.3.2",
    "feathers-authentication-management": "3.1.0",
    "history": "5.3.0",
    "joi-browser": "13.4.0",
    "lodash": "4.17.21",
    "mapbox-gl": "1.5",
    "mapbox-gl-leaflet": "0.0.15",
    "node-polyglot": "2.4.2",
    "sass": "1.57.1",
    "normalize-css": "2.3.1",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-autocomplete": "1.8.1",
    "react-dom": "18.2.0",
    "react-leaflet": "3.1.0",
    "react-leaflet-markercluster": "3.0.0-rc1",
    "react-loading": "2.0.3",
    "react-onclickoutside": "6.12.2",
    "react-redux": "8.0.5",
    "react-router": "5.3.4",
    "react-router-dom": "5.3.4",
    "react-s-alert": "1.4.1",
    "react-select": "1.2.1",
    "redux": "4.2.0",
    "redux-form": "8.3.9",
    "redux-promise-middleware": "6.1.3",
    "redux-thunk": "2.4.2",
    "superagent": "8.0.6",
    "superagent-promise": "1.1.0",
    "timeago": "1.6.7",
    "web-vitals": "3.1.1"
  },
  "devDependencies": {
    "react-scripts": "5.0.1",
    "@babel/eslint-parser": "7.19.1",
    "@babel/helper-regex": "7.10.5",
    "@playwright/test": "1.29.2",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-standard": "17.0.0",
    "eslint-config-standard-jsx": "11.0.0",
    "eslint-config-standard-react": "13.0.0",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-jest": "27.2.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-react": "7.32.0",
    "prettier": "2.8.2",
    "pretty-quick": "3.1.3",
    "standard": "17.0.0",
    "start-server-and-test": "1.15.2"
  },
  "scripts": {
    "dev": "BROWSER=none npx craco start | cat",
    "build": "SKIP_PREFLIGHT_CHECK=true craco build && cd build && cp static/js/*.js main.js && cp static/css/*.css main.css",
    "clean": "rm -rf build && mkdir build",
    "test": "SKIP_PREFLIGHT_CHECK=true echo 'noop'",
    "eject": "react-scripts eject",
    "lint": "npx eslint . --fix",
    "pretty-quick": "npx pretty-quick --staged",
    "prettier": "npx prettier '**/*.js' --write",
    "webtests": "NODE_ENV=test npx playwright test"
  },
  "publishConfig": {
    "access": "public"
  },
  "babel": {
    "presets": [
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "ignorePatterns": [
      "build/**"
    ],
    "rules": {
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "spaced-comment": 0,
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "standard-jsx",
      "standard-react",
      "prettier"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ]
}
