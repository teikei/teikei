    "node-polyglot": "2.3.0",
    "node-sass": "4.12.0",
    "normalize-css": "2.3.1",
    "prop-types": "15.6.2",
    "react": "16.4.2",
    "react-autocomplete": "1.8.1",
    "react-dom": "16.4.2",
    "react-leaflet": "1.9.1",
    "react-leaflet-markercluster": "1.1.8",
    "react-loading": "2.0.3",
    "react-onclickoutside": "6.7.1",
    "react-redux": "5.0.7",
    "react-router": "3.2.1",
    "react-s-alert": "1.4.1",
    "react-scripts": "^3.0.1",
    "react-select": "1.2.1",
    "redux": "4.0.0",
    "redux-form": "7.4.2",
    "redux-promise-middleware": "5.1.1",
    "redux-thunk": "2.3.0",
