    "url": "https://github.com/teikei/teikei/issues"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x",
    "yarn": "1.x"
  },
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "dependencies": {
    "@craco/craco": "^5.2.4",
    "classnames": "2.2.6",
    "feathers-authentication-management": "2.0.1",
    "feathers-client": "2.4.0",
    "history": "3.3.0",
