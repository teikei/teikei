{
  "name": "@teikei/map",
  "description": "Teikei map SPA component. Teikei is the software that powers ernte-teilen.org, a website that maps out Community-supported Agriculture in Germany.",
  "version": "0.0.8-alpha0.8",
  "homepage": "",
  "main": "src",
  "keywords": [
    "csa",
    "farming",
    "agriculture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/teikei/teikei"
  },
  "author": "Simon Jockers, Daniel Mack, Tobias PreuÃŸ, Christian Rijke",
  "license": "AGPL-3.0",
  "contributors": [],
  "bugs": {
    "url": "https://github.com/teikei/teikei/issues"
  },
  "engines": {
    "node": "14.x",
    "npm": "6.x",
    "yarn": "1.x"
  },
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "dependencies": {
    "@craco/craco": "5.6.4",
    "classnames": "2.2.6",
    "feathers-authentication-management": "2.0.1",
    "feathers-client": "2.4.0",
    "history": "3.3.0",
    "joi-browser": "13.4.0",
    "leaflet": "1.6.0",
    "leaflet.markercluster": "1.4.1",
    "lodash": "4.17.21",
    "node-polyglot": "2.4.0",
    "node-sass": "4.14.0",
    "normalize-css": "2.3.1",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-autocomplete": "1.8.1",
    "react-dom": "16.13.1",
    "react-leaflet": "2.6.3",
    "react-leaflet-markercluster": "2.0.0",
    "react-loading": "2.0.3",
    "react-onclickoutside": "6.9.0",
    "react-redux": "5.0.7",
    "react-router": "3.2.1",
    "react-s-alert": "1.4.1",
    "react-scripts": "3.0.1",
    "react-select": "1.2.1",
    "redux": "4.0.0",
    "redux-form": "7.4.2",
    "redux-promise-middleware": "5.1.1",
    "redux-thunk": "2.3.0",
    "superagent": "5.2.2",
    "superagent-promise": "1.1.0",
    "susy": "2.2.12",
    "timeago": "1.6.7"
  },
  "devDependencies": {
    "cypress": "4.4.1",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-config-standard": "14.1.1",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-cypress": "2.11.1",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.8.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-standard": "4.0.1",
    "prettier": "2.0.4",
    "pretty-quick": "2.0.1",
    "standard": "14.3.3"
  },
  "scripts": {
    "start": "SKIP_PREFLIGHT_CHECK=true FORCE_COLOR=true react-scripts start | cat -",
    "dev": "yarn run start",
    "cypress:open": "cypress open",
    "cypress:run": "NODE_ENV=test cypress run",
    "build": "SKIP_PREFLIGHT_CHECK=true craco build && cd build && cp static/js/*.js main.js && cp static/css/*.css main.css",
    "clean": "rm -rf build && mkdir build",
    "test": "SKIP_PREFLIGHT_CHECK=true echo 'noop'",
    "eject": "react-scripts eject",
    "lint": "npx eslint . --fix",
    "pretty-quick": "npx pretty-quick --staged",
    "prettier": "npx prettier '**/*.js' --write"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "plugins": [
      "jest",
      "cypress"
    ],
    "extends": [
      "plugin:cypress/recommended",
      "standard",
      "standard-react",
      "prettier",
      "prettier/react"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "yarn pretty-quick"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
