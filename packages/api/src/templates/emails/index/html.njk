{% extends "./layouts/base.njk" %}

{% block head %}
<meta http-equiv="Content-Security-Policy" content="default-src *; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline'">
<script language="javascript">
  function changeLocale() {
    var locale = document.getElementById("locales").value;
    window.location.href = "/emailPreview?locale=" + locale;
  }
  document.getElementById("locales").addEventListener("change", changeLocale);
</script>
{% endblock %}


{% block body %}
  <spacer size="16"></spacer>
  <container>
    <row>
      <columns>
        <p>These are the email templates used to send email from the Ernte Teilen app.</p>
        <spacer size="16"></spacer>
        <callout>
          <h4>German</h4>
          {% for template in templates %}
            <p>
              <a href="/emailPreview/{{ template }}?locale=de-DE" target="_blank">{{ template }}</a>
            </p>
          {% endfor %}
          <h4>French</h4>
          {% for template in templates %}
            <p>
              <a href="/emailPreview/{{ template }}?locale=fr-CH" target="_blank">{{ template }}</a>
            </p>
          {% endfor %}
        </callout>
      </columns>
    </row>
  </container>
{% endblock %}

{% block disclaimer %}
{% endblock %}
