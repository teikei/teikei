{% extends "./layouts/base.njk" %}

{% block body %}
<p class="lead">{{ t('admin_notification.headline') }}</p>
<spacer size="16"></spacer>

<callout class="secondary">
  <row>
    <columns>
      <p>
        <strong>{{ t('admin_notification.user') }}:</strong><br/>
        {{ user.name }} {{ user.email }}
      </p>
    </columns>
  </row>
  <row>
    <columns>
      <p>
        <strong>{{ t('admin_notification.entry') }}:</strong><br/>
        <a href="{{ permalink }}" target="_blank"}>{{ entry.name }}</a>
      </p>
    </columns>
  </row>
</callout>

<spacer size="16"></spacer>
{% endblock %}


