{% extends "./layouts/base.njk" %}

{% block body %}
<p>
{{ t('reset_password_instructions.greeting', { name: user.name }) }}
</p>
<p>
  {{ t('reset_password_instructions.content') }}
</p>
<p>
  <a href="{{ origin }}{{ baseurl }}/users/resetpassword?reset_password_token={{ user.resetToken }}">{{ t('reset_password_instructions.link_text') }}</a>
</p>
<p>
  {{ t('reset_password_instructions.ignore_if_unchanged') }}
</p>
<p>
  {{ t('reset_password_instructions.explanation') }}
</p>
{% endblock %}
