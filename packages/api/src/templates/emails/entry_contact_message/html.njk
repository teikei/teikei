{% extends "./layouts/base.njk" %}

{% block body %}
<p class="lead">
  {{ t('entry_contact_message.greeting', {name: recipient.name})<br/>
  {{ t('entry_contact_message.headline') }}
</p>
<spacer size="16"></spacer>

<callout class="secondary">
  <row>
    <columns>
      <p>
        <strong>{{ t('common.from') }}</strong><br/>
        {{message.senderName}}, {{message.senderEmail}}
      </p>
    </columns>
  </row>
  <row>
    <columns>
      <p>
        <strong>{{ t('entry_contact_message.toyourentry')}}:</strong><br/>
        <a href="{{permalink}}" target="_blank">{{entry.properties.name}}</a>
      </p>
    </columns>
  </row>
</callout>

<spacer size="16"></spacer>

<p>
  {{message.text}}
</p>
{% endblock %}

