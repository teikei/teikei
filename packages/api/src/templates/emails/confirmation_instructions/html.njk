{% extends "./layouts/base.njk" %}

{% block body %}
<h1>{{ t('confirmation_instructions.headline', { name: user.name})}}</h1>
<p>
  {{ t('confirmation_instructions.content', {email: user.email, origin: user.origin}) }}
</p>
<ul>
  <li>
    <a href="{{ user.origin }}{{ user.baseurl }}/?confirmation_token={{ user.verifyToken }}">{{ t('confirmation_instructions.linktext') }}</a>
  </li>
</ul>
<p>
{{ t('confirmation_instructions.alternative') }}
</p>
<ul>
  <li>
    {{ user.origin }}{{ user.baseurl }}/?confirmation_token={{ user.verifyToken }}
  </li>
</ul>
{% endblock %}
