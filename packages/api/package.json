{
  "name": "@teikei/api",
  "description": "Teikei API server. Teikei is the software that powers ernte-teilen.org, a website that maps out Community-supported Agriculture in Germany.",
  "version": "1.0.0",
  "homepage": "",
  "main": "src",
  "keywords": [
    "csa",
    "farming",
    "agriculture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/teikei/teikei"
  },
  "author": "Simon Jockers, Daniel Mack, Tobias Preu√ü, Christian Rijke",
  "license": "AGPL-3.0",
  "contributors": [],
  "bugs": {
    "url": "https://github.com/teikei/teikei/issues"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "scripts": {
    "test": "NODE_ENV=test jest --maxConcurrency=1 --maxWorkers=1 --unhandled-rejections=strict --forceExit",
    "integration-test": "NODE_ENV=test jest --maxConcurrency=1 --maxWorkers=1 --unhandled-rejections=strict --forceExit",
    "test:watch": "NODE_ENV=test jest --watch --notify --runInBand --config=jest.config.js",
    "clean": "rm -rf build && mkdir build",
    "build": "npx babel -d ./build -D ./src",
    "start": "node ./build/index.js",
    "dev": "npx babel-watch --watch src/templates src/index.js | npx pino-pretty --translateTime",
    "dev-db": "run-p dev-db-startdocker dev-db-initdb",
    "dev-db-startdocker": "docker build -t teikei-environment ./db && docker run -p 5432:5432 teikei-environment",
    "dev-db-initdb": "until pg_isready -d teikei -h localhost -p 5432 ; do sleep 1 ; done && npm run migrate:latest && npm run seed:run",
    "dev-debug": "DEBUG=* babel-watch src/index.js",
    "mocha": "mocha test/ --recursive --exit",
    "lint": "npx eslint . --fix",
    "prettier": "npx prettier '**/*.js' --write",
    "migrate:latest": "npx knex --knexfile db/knexfile.js migrate:latest",
    "migrate:make": "npx knex migrate:make  --migrations-directory ./db/migrations",
    "seed:run": "cd db && npx knex seed:run"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@feathersjs/authentication": "^5.0.24",
    "@feathersjs/authentication-local": "^5.0.24",
    "@feathersjs/configuration": "^5.0.24",
    "@feathersjs/errors": "^5.0.24",
    "@feathersjs/express": "^5.0.24",
    "@feathersjs/feathers": "^5.0.24",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.4.5",
    "email-templates": "^11.1.1",
    "express-basic-auth": "^1.2.1",
    "feathers-authentication-management": "^5.0.1",
    "feathers-envhelpers": "^0.6.2",
    "feathers-hooks-common": "^8.1.2",
    "feathers-objection": "7.6.0",
    "geojson": "^0.5.0",
    "glob": "^10.3.12",
    "helmet": "^7.1.0",
    "inky": "^1.4.2",
    "joi": "^17.12.2",
    "jwt-decode": "^4.0.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.13",
    "nodemailer-postmark-transport": "^6.0.0",
    "nodemailer-sparkpost-transport": "^2.2.0",
    "nunjucks": "^3.2.4",
    "objection": "^3.1.4",
    "objection-db-errors": "^1.1.2",
    "passport-jwt": "^4.0.1",
    "pg": "^8.11.4",
    "serve-favicon": "^2.5.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.3",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/node": "^7.23.9",
    "@babel/preset-env": "^7.24.3",
    "@faker-js/faker": "^8.4.1",
    "@trendyol/jest-testcontainers": "^2.1.1",
    "babel-jest": "^29.7.0",
    "babel-watch": "^7.8.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "jest": "^29.7.0",
    "knex-db-manager": "^0.7.0",
    "pg-connection-string": "^2.6.3",
    "pg-escape": "^0.2.0",
    "prettier": "^3.2.5",
    "pretty-quick": "^4.0.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "standard": "^17.1.0",
    "testcontainers": "^10.8.1",
    "uuid": "^9.0.1",
    "watchman": "^1.0.0",
    "webpack": "^5.91.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "ignorePatterns": [
      "build/**"
    ],
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier"
    ]
  }
}
