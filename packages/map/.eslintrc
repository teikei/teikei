{
  "ignorePatterns": [
    "dist/**", "vite.config.ts", "playwright.config.ts", "playwright-report"
  ],
  "rules": {
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "no-console": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parser": "@typescript-eslint/parser",
  "env": {
    "jest/globals": true,
    "browser": true
  },
  "plugins": [
    "@typescript-eslint",
    "jest"
  ],
  "extends": [
    "standard",
    "standard-jsx",
    "standard-react",
    "plugin:@tanstack/query/recommended",
    "prettier"
  ]
}
