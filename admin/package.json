{
  "name": "@teikei/admin",
  "version": "0.0.8-alpha0.8",
  "description": "Teikei Administration Backend",
  "main": "src/index.js",
  "engines": {
    "node": "14.x",
    "npm": "6.x",
    "yarn": "1.x"
  },
  "scripts": {
    "dev": "SKIP_PREFLIGHT_CHECK=true PORT=4000 react-scripts start | cat -",
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "lint": "npx eslint src --fix",
    "prettier": "npx prettier '**/*.js' --write",
    "clean": "rm -rf build && mkdir build",
    "test": "echo 'disabled until CRA/jest is compatible again' && exit 0 && SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "browser": "./index.js",
  "author": "Simon Jockers, Christian Rijke",
  "license": "AGPL-3.0",
  "dependencies": {
    "@casl/ability": "5.1.1",
    "@crudlio/crudl": "https://github.com/teikei/crudl.git",
    "@crudlio/crudl-connectors-base": "https://github.com/teikei/crudl-connectors-base.git",
    "lodash": "4.17.15",
    "moment": "2.26.0",
    "prop-types": "15.7.2",
    "query-string": "6.13.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-scripts": "3.0.1"
  },
  "devDependencies": {
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-config-standard": "14.1.1",
    "eslint-config-standard-react": "9.2.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.20.0",
    "eslint-plugin-standard": "4.0.1",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "standard": "14.3.4"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "react/prop-types": 0,
      "react/react-in-jsx-scope": 0,
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "standard-react",
      "prettier",
      "prettier/react"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "yarn pretty-quick"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
