{
  "name": "@teikei/admin",
  "version": "0.0.8-alpha0.8",
  "description": "Teikei Administration Backend",
  "main": "src/index.js",
  "engines": {
    "node": "12.x",
    "npm": "6.x",
    "yarn": "1.x"
  },
  "scripts": {
    "dev": "SKIP_PREFLIGHT_CHECK=true PORT=4000 react-scripts start | cat -",
    "build": "SKIP_PREFLIGHT_CHECK=true react-scripts build",
    "lint": "npx eslint src --fix",
    "clean": "rm -rf build && mkdir build",
    "test": "echo 'disabled until CRA/jest is compatible again' && exit 0 && SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "parser": "babel-eslint",
    "rules": {
      "no-extra-semi": 2,
      "semi": 0,
      "react/jsx-filename-extension": 0,
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier",
      "babel"
    ],
    "env": {
      "browser": true,
      "jest": true
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browser": "./index.js",
  "author": "Simon Jockers, Christian Rijke",
  "license": "AGPL-3.0",
  "devDependencies": {
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.1.0",
    "eslint-loader": "2.1.2",
    "eslint-plugin-babel": "5.3.0",
    "eslint-plugin-cypress": "^2.2.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.1",
    "eslint-plugin-react": "7.12.4",
    "prettier": "1.16.4"
  },
  "dependencies": {
    "@casl/ability": "^2.4.2",
    "@crudlio/crudl": "https://github.com/crudlio/crudl.git",
    "@crudlio/crudl-connectors-base": "https://github.com/crudlio/crudl-connectors-base.git",
    "lodash": "^4.17.13",
    "moment": "2.22.2",
    "prop-types": "15.6.2",
    "react": "16.10.2",
    "react-dom": "16.4.2",
    "react-scripts": "^3.0.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
