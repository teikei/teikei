{
  "name": "@teikei/api",
  "description": "Teikei API server. Teikei is the software that powers ernte-teilen.org, a website that maps out Community-supported Agriculture in Germany.",
  "version": "0.0.8-alpha0.8",
  "homepage": "",
  "main": "src",
  "keywords": [
    "csa",
    "farming",
    "agriculture"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/teikei/teikei"
  },
  "author": "Simon Jockers, Daniel Mack, Tobias Preu√ü, Christian Rijke",
  "license": "AGPL-3.0",
  "contributors": [],
  "bugs": {
    "url": "https://github.com/teikei/teikei/issues"
  },
  "engines": {
    "node": "14.x",
    "npm": "6.x",
    "yarn": "1.x"
  },
  "directories": {
    "lib": "src",
    "test": "test/"
  },
  "scripts": {
    "test:drop": "cd db && NODE_ENV=test npx babel-node index.js drop | npx pino-pretty --translateTime",
    "test:init": "cd db && NODE_ENV=test npx babel-node index.js init | npx pino-pretty --translateTime",
    "test": "NODE_ENV=test jest --runInBand",
    "test:watch": "NODE_ENV=test jest --watch --notify --runInBand --config=jest.config.js",
    "clean": "rm -rf build && mkdir build",
    "build": "npx babel -d ./build -D ./src",
    "start": "node ./build/index.js",
    "dev": "npx babel-watch --watch src/templates src/index.js | npx pino-pretty --translateTime ",
    "dev-debug": "DEBUG=* babel-watch src/index.js",
    "mocha": "mocha test/ --recursive --exit",
    "lint": "npx eslint . --fix",
    "pretty-quick": "npx pretty-quick --staged",
    "prettier": "npx prettier '**/*.js' --write",
    "migrate:latest": "cd db && npx knex migrate:latest",
    "migrate:make": "cd db && npx knex migrate:make",
    "seed:run": "cd db && npx knex seed:run"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@casl/ability": "2.4.2",
    "@feathersjs/authentication": "2.1.16",
    "@feathersjs/authentication-jwt": "2.0.10",
    "@feathersjs/authentication-local": "1.2.9",
    "@feathersjs/configuration": "4.5.3",
    "@feathersjs/errors": "4.5.3",
    "@feathersjs/express": "4.5.4",
    "@feathersjs/feathers": "4.5.3",
    "axios": "0.19.2",
    "bcrypt": "4.0.1",
    "bull": "3.14.0",
    "bull-arena": "2.8.1",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "email-templates": "7.0.5",
    "express-basic-auth": "1.2.0",
    "feathers-authentication-management": "2.0.1",
    "feathers-envhelpers": "0.6.2",
    "feathers-hooks-common": "5.0.3",
    "feathers-logger": "0.3.2",
    "feathers-objection": "5.5.0",
    "geojson": "0.5.0",
    "glob": "7.1.6",
    "helmet": "3.22.0",
    "inky": "1.3.7",
    "joi": "14.3.1",
    "jwt-decode": "2.2.0",
    "knex": "0.21.1",
    "lodash": "^4.17.15",
    "moment": "^2.27.0",
    "nodemailer": "6.4.8",
    "nodemailer-sparkpost-transport": "2.2.0",
    "nunjucks": "3.2.1",
    "objection": "2.1.5",
    "objection-db-errors": "^1.1.2",
    "passport-jwt": "4.0.0",
    "pg": "8.2.1",
    "pino": "6.7.0",
    "pino-pretty": "4.0.0",
    "serve-favicon": "2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "7.10.1",
    "@babel/plugin-proposal-class-properties": "7.10.1",
    "@babel/plugin-proposal-object-rest-spread": "7.10.1",
    "@babel/preset-env": "^7.10.2",
    "babel-eslint": "=10.1.0",
    "babel-jest": "=26.0.1",
    "babel-watch": "7.0.0",
    "config": "3.3.1",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "4.1.0",
    "jest": "26.0.1",
    "knex-db-manager": "0.6.1",
    "pg-connection-string": "2.2.3",
    "pg-escape": "0.2.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "request": "2.88.2",
    "request-promise": "4.2.5",
    "standard": "^14.3.4",
    "swagger-ui": "3.25.5",
    "swagger-ui-dist": "3.25.5",
    "uuid": "8.1.0",
    "watchman": "1.0.0",
    "webpack": "4.43.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "env": {
      "jest/globals": true,
      "browser": true
    },
    "plugins": [
      "jest"
    ],
    "extends": [
      "standard",
      "prettier"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "jsxSingleQuote": false
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint",
      "pre-commit": "yarn pretty-quick"
    }
  }
}
